# .env.example
# Kopiere diese Datei nach .env und fülle die Werte aus

# Supabase Konfiguration
SUPABASE_URL="http://host.docker.internal:54321"
SUPABASE_ANON_KEY="your-anon-key-here"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key-here"
SUPABASE_JWT_SECRET="your-jwt-secret-here"

# Ollama Konfiguration
OLLAMA_BASE_URL=http://ollama:11434

# KI-Modell Konfiguration
# Wechsel zwischen lokalem Ollama und Gemini API
# USE_GEMINI=false für lokales Ollama (Standard)
# USE_GEMINI=true für Gemini API
USE_GEMINI=false

# Gemini API Konfiguration (nur wenn USE_GEMINI=true)
# API-Key von https://ai.google.dev/gemini-api/docs
GEMINI_API_KEY=your-gemini-api-key-here

# HTTPS/SSL Konfiguration (nur für Produktion)
# Domain-Name für SSL-Zertifikat (z.B. gustav.example.com)
DOMAIN_NAME=your-domain.com

# E-Mail für Let's Encrypt Benachrichtigungen
LETSENCRYPT_EMAIL=your-email@example.com

# Staging-Modus für Let's Encrypt (1 = Test-Zertifikate, 0 = echte Zertifikate)
# Nutze 1 für Tests, um Rate Limits zu vermeiden
LETSENCRYPT_STAGING=1

# Site URL für E-Mail-Links und Redirects
# Development: http://localhost:8501
# Production: https://gymalf-gustav.duckdns.org
SITE_URL=http://localhost:8501

# E-Mail/SMTP Konfiguration (für Produktion)
# SMTP-Passwort für den E-Mail-Versand
# Für Gmail: App-spezifisches Passwort erstellen (nicht das normale Gmail-Passwort)
# Für Outlook/Exchange: Normales Passwort oder App-Passwort
# Für eigenen Mailserver: Das entsprechende SMTP-Passwort
SMTP_PASSWORD="your-smtp-password-here"

# Weitere Produktions-Einstellungen (optional)
# BACKUP_ENCRYPTION_KEY="your-backup-encryption-key"
# LOG_LEVEL="INFO"
# MAX_REQUESTS_PER_MINUTE="60"
# SESSION_TIMEOUT_MINUTES="30"

# Session-Verschlüsselung (für LocalStorage-Persistierung)
# Generiere einen sicheren Key: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
SESSION_ENCRYPTION_KEY="your-session-encryption-key-here"

# Auth Service Konfiguration
# JWT Secret für Token-Signierung
# Generiere: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET="your-jwt-secret-here"

# Redis URL für Session Management
REDIS_URL="redis://redis:6379"

# Auth Service URL (intern für Service-zu-Service Kommunikation)
AUTH_SERVICE_URL="http://auth:8000"

# Cookie Domain (für Production: .gustav.school)
COOKIE_DOMAIN="localhost"

# Cookie Secure Flag (true für Production mit HTTPS, false für Development)
COOKIE_SECURE="false"

# Session Timeout in Minuten
SESSION_TIMEOUT_MINUTES="90"

# Environment (development, staging, production)
ENVIRONMENT="development"