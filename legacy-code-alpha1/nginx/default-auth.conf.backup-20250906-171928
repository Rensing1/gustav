# nginx/default-auth.conf
# nginx Konfiguration für GUSTAV mit HttpOnly Cookie Authentication

# Rate Limiting
limit_req_zone $binary_remote_addr zone=verify_limit:10m rate=5r/m;
limit_req_zone $binary_remote_addr zone=login_limit:10m rate=5r/m;

# Upstream definitions
upstream streamlit_app {
    server app:8501;
}

upstream auth_service {
    server auth:8000;
}

# HTTP Server - Redirect zu HTTPS
server {
    listen 80;
    server_name ${DOMAIN_NAME};
    
    # Let's Encrypt Challenge
    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }
    
    # Alle anderen Anfragen zu HTTPS umleiten
    location / {
        return 301 https://$server_name$request_uri;
    }
}

# HTTPS Server
server {
    listen 443 ssl;
    server_name ${DOMAIN_NAME};
    
    # SSL Zertifikate von Let's Encrypt
    ssl_certificate /etc/letsencrypt/live/${DOMAIN_NAME}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/${DOMAIN_NAME}/privkey.pem;
    
    # SSL Sicherheitseinstellungen
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers 'ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384';
    ssl_prefer_server_ciphers off;
    ssl_session_timeout 1d;
    ssl_session_cache shared:SSL:50m;
    ssl_stapling on;
    ssl_stapling_verify on;
    
    # Sicherheits-Header
    add_header Strict-Transport-Security "max-age=63072000; includeSubDomains; preload" always;
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "no-referrer-when-downgrade" always;
    add_header Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' cdn.jsdelivr.net; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob: https:; font-src 'self' data:; connect-src 'self' ws: wss: https:; frame-src 'self'; object-src 'none'; base-uri 'self'; form-action 'self';" always;
    add_header Permissions-Policy "geolocation=(), microphone=(), camera=()" always;
    
    # Maximale Upload-Größe (für Datei-Uploads in der App)
    client_max_body_size 100M;
    
    # Auth Service Endpoints (ungeschützt für Login/Logout)
    location /auth/ {
        # Rate limiting für Login
        limit_req zone=login_limit burst=5 nodelay;
        
        proxy_pass http://auth_service;
        proxy_http_version 1.1;
        
        # Headers
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Cookie handling
        proxy_set_header Cookie $http_cookie;
        proxy_pass_header Set-Cookie;
        
        # Timeouts
        proxy_connect_timeout 30s;
        proxy_send_timeout 30s;
        proxy_read_timeout 30s;
    }
    
    # Static resources (bypass auth)
    location ~ ^/(static|assets|media)/ {
        proxy_pass http://streamlit_app;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_cache_valid 200 60m;
        expires 1h;
        add_header Cache-Control "public, immutable";
    }
    
    # WebSocket endpoints für Streamlit (spezielle Behandlung)
    location ~ ^/_stcore/(stream|health) {
        # WebSockets benötigen spezielle Behandlung für auth_request
        # Validiere Session über Cookie oder Query Parameter
        
        set $auth_status 0;
        
        # Prüfe Cookie
        if ($cookie_gustav_session ~ ^[a-zA-Z0-9_-]+$) {
            set $auth_status 1;
        }
        
        # Falls kein Cookie, prüfe Query Parameter (für WebSocket Handshake)
        if ($arg_session ~ ^[a-zA-Z0-9_-]+$) {
            set $auth_status 1;
        }
        
        if ($auth_status = 0) {
            return 403;
        }
        
        proxy_pass http://streamlit_app;
        proxy_http_version 1.1;
        
        # WebSocket headers
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # WebSocket timeouts
        proxy_read_timeout 86400;
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        
        # Disable buffering
        proxy_buffering off;
        proxy_request_buffering off;
    }
    
    # Healthcheck Endpoint (ungeschützt)
    location /health {
        access_log off;
        return 200 "OK\n";
        add_header Content-Type text/plain;
    }
    
    # Protected Streamlit App
    location / {
        # Auth request to validate session
        auth_request /internal/auth/verify;
        
        # Capture auth headers
        auth_request_set $auth_user_id $upstream_http_x_user_id;
        auth_request_set $auth_user_email $upstream_http_x_user_email;
        auth_request_set $auth_user_role $upstream_http_x_user_role;
        auth_request_set $auth_access_token $upstream_http_x_access_token;
        
        # Handle auth errors
        error_page 401 = @error401;
        error_page 403 = @error403;
        
        # Pass auth info to Streamlit
        proxy_set_header X-User-Id $auth_user_id;
        proxy_set_header X-User-Email $auth_user_email;
        proxy_set_header X-User-Role $auth_user_role;
        proxy_set_header X-Access-Token $auth_access_token;
        
        proxy_pass http://streamlit_app;
        proxy_http_version 1.1;
        
        # WebSocket Support
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        
        # Standard headers
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Timeouts für lange Verbindungen
        proxy_read_timeout 86400;
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        
        # Deaktiviere Buffering für Streamlit
        proxy_buffering off;
        proxy_request_buffering off;
    }
    
    # Internal auth verification endpoint
    location = /internal/auth/verify {
        internal;
        
        proxy_pass http://auth_service/auth/verify;
        proxy_pass_request_body off;
        proxy_set_header Content-Length "";
        proxy_set_header X-Original-URI $request_uri;
        proxy_set_header X-Original-Method $request_method;
        proxy_set_header Cookie $http_cookie;
        
        # Short timeout for auth checks
        proxy_connect_timeout 5s;
        proxy_send_timeout 5s;
        proxy_read_timeout 5s;
    }
    
    # Error handlers
    location @error401 {
        # Redirect to login page or return JSON error
        default_type application/json;
        return 401 '{"error": "Unauthorized", "message": "Please log in to access this resource"}';
    }
    
    location @error403 {
        default_type application/json;
        return 403 '{"error": "Forbidden", "message": "You do not have permission to access this resource"}';
    }
    
    # Supabase verify endpoint (kept for compatibility)
    location = /auth/v1/verify {
        # Nur GET-Requests erlauben
        limit_except GET {
            deny all;
        }
        
        # Rate Limiting anwenden
        limit_req zone=verify_limit burst=2 nodelay;
        
        # Request-Body verbieten
        client_max_body_size 0;
        
        # Proxy zu lokaler Supabase-Instanz
        proxy_pass http://host.docker.internal:54321;
        proxy_http_version 1.1;
        
        # Sicherheits-Header
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Keine Admin-Header weiterleiten
        proxy_set_header Authorization "";
        proxy_set_header apikey "";
        
        # Kurze Timeouts
        proxy_connect_timeout 10s;
        proxy_send_timeout 10s;
        proxy_read_timeout 10s;
    }
}